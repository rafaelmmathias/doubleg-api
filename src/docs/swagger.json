{
  "swagger": "2.0",
  "info": {
    "title": "File Management API",
    "description": "API para gerenciamento de arquivos com Prisma",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Files",
      "description": "Operações com arquivos"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/": {
      "post": {
        "tags": [
          "Files"
        ],
        "summary": "Fazer upload de arquivo",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Arquivo criado com sucesso"
          },
          "400": {
            "description": "Arquivo não fornecido ou nome ausente"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Arquivo a ser enviado"
                  },
                  "name": {
                    "type": "string",
                    "example": "Meu documento",
                    "description": "Nome do arquivo"
                  },
                  "description": {
                    "type": "string",
                    "example": "Descrição do arquivo",
                    "description": "Descrição opcional"
                  },
                  "owner": {
                    "type": "string",
                    "example": "user123",
                    "description": "Proprietário do arquivo"
                  }
                },
                "required": [
                  "file",
                  "name",
                  "owner"
                ]
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Files"
        ],
        "summary": "Listar arquivos",
        "description": "",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "type": "string"
          },
          {
            "name": "tag",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de arquivos"
          }
        }
      }
    },
    "/{id}": {
      "put": {
        "tags": [
          "Files"
        ],
        "summary": "Atualizar metadados do arquivo",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Arquivo atualizado com sucesso"
          },
          "404": {
            "description": "Arquivo não encontrado"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Novo nome"
                  },
                  "description": {
                    "type": "string",
                    "example": "Nova descrição"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Files"
        ],
        "summary": "Download do arquivo",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Arquivo encontrado"
          },
          "404": {
            "description": "Arquivo não encontrado"
          }
        }
      },
      "delete": {
        "tags": [
          "Files"
        ],
        "summary": "Deletar arquivo",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Arquivo deletado com sucesso"
          },
          "404": {
            "description": "Arquivo não encontrado"
          }
        }
      }
    }
  }
}