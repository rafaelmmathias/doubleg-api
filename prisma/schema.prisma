
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id           String   @id @default(uuid())
  name         String
  description  String?
  owner        String?
  tags         String[]
  originalName String
  storedName   String
  mimeType     String
  size         Int
  hash         String   @unique
  path         String
  createdAt    DateTime @default(now())
}
